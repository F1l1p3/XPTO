@using XPTO.UserInfo.Core.Model

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

    List<UsuarioAtivo> usuarios = (List<UsuarioAtivo>)ViewBag.usuarios;
}

<h2 style="margin-top:50px">Novo Produto</h2>

@if (ViewBag.resposta != "")
{
<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>Atenção!</strong> @ViewBag.resposta
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
}


<form method="post" action=@Url.Content("~/Produto/IndexPost")>
    <div class="form-group">
        <label for="nome_produto">Produto</label>
        <div class="col-md-10">
            <input type="text" id="nome_produto" name="nome_produto" class="form-control" />
        </div>
    </div>

    <div class="form-group">
        <label for="usuario">Usuário</label>
        <div class="col-md-10">
            <select id="usuario" name="usuario" class="form-control">
                @foreach (UsuarioAtivo item in usuarios)
                {
                    <option value="@item.id">@item.nome</option>
                }
            </select>
        </div>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>
